<div class="ui segment" id="target">
  <div class="ui grid">
    <div class="sixteen wide center aligned column">
      <h1 class="center aligned" id="location">
        <%= @weather["location"] %>
      </h1>
    </div>
  </div>
  <div class="ui grid">
    <div class="six wide center aligned column" id="info">
      <div id="weather">
        <%= image_tag get_icon(@weather) %>
        <h3>
          <%= @weather["temp_f"] %> F
        </h3>
        <p>
          <%= @weather["conditions"] %>
        </p>
      </div>
    </div>
    <div class="ten wide center align column">
      <div id="forecast">
        <div class="ui list">
          <% @forecast.each do |forecast| %>
            <div class="item">
              <%= image_tag get_icon(forecast), :class => "ui avatar image" %>
              <div class="content">
                <p class="header"><%= forecast["date"]["weekday"] %></p>
                <div class="description">
                  <b>HI: </b><%= forecast["high"]["fahrenheit"] %> <b>LO: </b><%= forecast["low"]["fahrenheit"] %>
                  <p>
                    <%= forecast["conditions"] %>.
                  </p>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

<p>
  <%= @icon_test %>
</p>

<base target="_blank" />
<iframe width="440" height="280" frameborder="0" scrolling="no" marginheight="0" marginwidth="0"
   src="https://daj-weather.herokuapp.com">
</iframe><br />
